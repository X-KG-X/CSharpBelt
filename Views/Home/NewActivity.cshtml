@model Event
<p class="h4">Dojo Acitivity Center<span class="float-right"> <a href="/success" class="h6" >Home</a><a href="logout" class="h6 ml-5">Logout</a></span></p>

<h5>Create an Activity</h5>


<form action="addEvent" method="post">
<div class="row">
    <div class="col-6">
        <div>
            <p>Title:
                <input type="text" asp-for="Title" class="float-right" >
            </p>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div>
            <p>Date:
                <input  asp-for="EventDate" class="float-right">
            </p>
            <span asp-validation-for="EventDate" class="text-danger"></span>
        </div>
    </div>
    <div class="col-6">
        <div>
            <p>Duration:
                <input  asp-for="Duration" class="float-right">
            </p>
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div> 
    </div>
</div>
<div>
    Description:
    <textarea asp-for="Description"  rows="3" class="form-control"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>

</div>
    <input type="submit" value="Create Activity" class=" float-right mt-2 btn btn-success">
    
</form>